<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.2"?>
<plugin>

   <extension
         point="org.eclipse.ui.actionSets">
      <actionSet
            label="Sample Action Set"
            visible="true"
            id="DependencyGraphExtractor.actionSet">
         <menu
               id="barrio.topMenu"
               label="Barrio">
            <groupMarker
                  name="barrio.content">
            </groupMarker>
            <separator
                  name="additions">
            </separator>
            <groupMarker
                  name="barrio.actions1">
            </groupMarker>
            <groupMarker
                  name="barrio.actions2">
            </groupMarker>
            <groupMarker
                  name="barrio.actions3">
            </groupMarker>
         </menu>
         <action
               class="nz.ac.massey.cs.barrio.srcgraphbuilder.ExtractDependencyGraphAction"
               icon="icons/sample.gif"
               id="barrio.SrcCodeReadAction"
               label="&amp;Analyse project sources"
               menubarPath="barrio.topMenu/barrio.actions2"
               style="push"
               tooltip="Extract dependency graph from selected Java project">
         </action>
      </actionSet>
   </extension>

</plugin>
